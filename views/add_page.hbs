<h1 style="color: white;">
  Новое объявление
</h1>

<div class="my_container">

  <section class="section">

    <form action="/add" method="POST" enctype="multipart/form-data">

      {{! Заголовок объявления }}
      <section>
        <h4>Заголовок объявления</h4>

        <input class="m10-l" name="title" value="Название " required />
      </section>
      {{!  }}

      <div class="divider m10"></div>

      {{! Выберите тип недвижимости }}
      <section>
        <h4>Выберите тип недвижимости</h4>

        {{#each type}}

          <p>
            <label class="m10-l">
              {{#ifeq @index 0}}
                <input name="type" type="radio" value="{{this}}" checked />
              {{else}}
                <input name="type" type="radio" value="{{this}}" />
              {{/ifeq}}
              <span>{{this}}</span>
            </label>
          </p>

        {{/each}}

      </section>
      {{!  }}

      <div class="divider m10"></div>

      {{! Количество комнат }}
      <section>
        <h4>Количество комнат</h4>

        {{#each num_room}}
          <p>
            <label class="m10-l">
              {{#ifeq @index 0}}
                <input name="num_rooms" type="radio" value="{{this}}" checked />
              {{else}}
                <input name="num_rooms" type="radio" value="{{this}}" />
              {{/ifeq}}

              <span>{{this}}</span>
            </label>
          </p>
        {{/each}}

      </section>
      {{!  }}

      <div class="divider m10"></div>

      {{! Ремонт }}
      <section>
        <h4>Ремонт</h4>

        {{#each repair}}

          <p>
            <label class="m10-l">
              {{#ifeq @index 0}}
                <input name="repair" type="radio" value="{{this}}" checked />
              {{else}}
                <input name="repair" type="radio" value="{{this}}" />
              {{/ifeq}}

              <span>{{this}}</span>
            </label>
          </p>

        {{/each}}

      </section>
      {{!  }}

      <div class="divider m10"></div>

      {{! Об объекте }}
      <section class="section">
        <h4>Об объекте</h4>

        <div class="m10-l">

          {{! Этаж }}
          <li>
            <span class="span_title">Этаж</span>
            <div class="myContainer">
              <input
                class="border_remove w4em"
                type="number"
                name="level"
                required
              />
            </div>
          </li>
          {{!  }}

          {{! Всего этажей }}
          <li>
            <span class="span_title">Всего этажей</span>
            <div class="myContainer">
              <input
                class="border_remove w4em"
                type="number"
                name="total_level"
                required
              />
            </div>
          </li>
          {{!  }}

          {{! Площадь }}
          <li>
            <span class="span_title">Площадь</span>

            <div class="myContainer">
              <input
                class="border_remove w4em"
                type="number"
                name="space"
                required
              />
            </div>

            <span>м²</span>
          </li>
          {{!  }}

        </div>

      </section>
      {{!  }}

      <div class="divider m10"></div>

      {{! Описание }}
      <section>
        <h4>Описание</h4>

        <div class="input-field m10">
          <textarea
            id="description"
            name="description"
            class="materialize-textarea"
          >Пусто</textarea>
        </div>

      </section>
      {{!  }}

      <div class="divider m10"></div>

      {{! Фотографии }}
      <section>
        <h4>Фотографии</h4>

        <div class="file-field input-field">

          <div class="btn">
            <span>Загрузить</span>
            <input type="file" name="img" multiple />

          </div>
          <div class="file-path-wrapper">
            <input
              class="file-path validate"
              type="text"
              placeholder="Загрузите один или несколько файлов"
              required
            />
          </div>
        </div>

      </section>
      {{!  }}

      <div class="divider m10"></div>

      {{! Цена }}
      <section>
        <h4>Цена</h4>

        <li>
          <div class="myContainer m10-l w6em">
            <input class="border_remove" name="price" type="number" required />
          </div>

          <span>₽</span>

        </li>

      </section>
      {{!  }}

      <div class="divider m10"></div>

      <button class="btn btn-primary">
        Опубликовать
      </button>

    </form>

  </section>

</div>