<h1 style="color: white;">
  Мои объявления
</h1>

{{#if items.length}}

  <div id="items" class="row">

    {{! Карточка }}
    {{#each items}}

      <div class="item">

        <a href="/items/{{_id}}/edit?allow=true">

          <div class="card horizontal hoverable">

            <div class="card-image my-card-image">
              <img src="{{img}}" alt="{{title}}" />
            </div>

            <div class="card-stacked" style="justify-content: space-between">

              <div class="card-content" style="font-size: 25px;">

                <div class="col s12">
                  {{space}}м<sup>2</sup>,
                  {{title}}
                </div>

                <div class="row">

                  <div class="col s6">
                    {{type}}
                    <br />
                    {{num_rooms}}
                    комнат(а)
                  </div>

                  <div class="col s6 align-c price">
                    {{price}}
                  </div>

                </div>

              </div>

              <div class="card-action align-r">

                <form action="/items/remove" method="POST">
                  <input type="hidden" name="id" value="{{_id}}" />
                  <button
                    class="btn tooltipped transparent"
                    data-position="bottom"
                    data-tooltip="Удалить объявление"
                  >
                    <i class="fa-solid fa-trash" style="color: #b71c1c;"></i>
                  </button>
                </form>

              </div>

            </div>

          </div>
        </a>
      </div>

    {{/each}}

  </div>

  {{!  }}

{{else}}
  <section class="my_container align-c">
    <h5 class="m100">Опубликованных объявлений пока нет</h5>
  </section>
{{/if}}

